<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_uom_tree_view" model="ir.ui.view">
        <field name="name">uom.uom.tree</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="description"/>
            </field>
        </field>
    </record>

    <record id="product_uom_form_view" model="ir.ui.view">
        <field name="name">uom.uom.form</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="description"/>
            </field>
        </field>
    </record>

    <record id="product_uom_search_view" model="ir.ui.view">
        <field name="name">uom.uom.search</field>
        <field name="model">uom.uom</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name','ilike', self), ('description', 'ilike', self)]"/>
                <field name="category_id"/>
                <group>
                    <filter string="Category" context="{'group_by':'category_id'}" name="group_category_id"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
