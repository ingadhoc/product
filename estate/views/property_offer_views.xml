    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree  editable="top" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                <field name="price" string="Price"/>
                <field name="partner_id" string="Partner"/>
                <button name="action_accept_offer" string="Confirm" type="object" icon="fa-check" attrs="{'invisible': ['|', ('status', '=', 'acepted'), ('status', '=', 'refused')]}"/>
                <button name="action_decline_offer" string="Refuse" type="object" icon="fa-times" attrs="{'invisible': ['|', ('status', '=', 'acepted'), ('status', '=', 'refused')]}"/>
                <field name="status" string="Status" invisible="1"/>
                <field name="property_type_id" string="Type"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
               <group>
                    <field name="price" string="Price"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="status" string="Status"/>
                    <field name="create_date" string="Create date"/>
                    <field name="validity" string="Validity"/>
                    <field name="date_deadline" string="Deadline"/>
                </group>
                
            </form>
        </field>
    </record>


</odoo>