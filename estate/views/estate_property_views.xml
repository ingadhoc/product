<?xml version="1.0"?>
<odoo>
    <record id="estate_property" model="ir.actions.act_window">
        <field name="name">Estate property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="estate_property_view_search"/>
        <field name="context">{'search_default_Available': 1}</field>
    </record>


    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state == ('offer received') or state == ('offer accepted')" 
                    decoration-bf="state == 'offer accepted'" decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="state" invisible="1"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <field name="total_area" string="Total Area"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From" optional="hide"/>
                <field name="property_type_id" string="Type"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_property_sold" type="object" string="Sold" attrs="{'invisible': [('state', '=', 'sold')]}"/>
                    <button name="action_property_cancel" type="object" string="Cancel" attrs="{'invisible': ['|', ('state', '=', 'sold'), ('state', '=', 'canceled')]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>

               <sheet>
                    <h1>
                        <field name="name" string="Title"/>
                    </h1>
                    <group>
                        <group>
                            <field name="postcode" string="Postcode"/>
                            <field name="property_type_id" string="Type" options="{'no_create_edit': true, 'no_create': true}"/>
                            <field name="date_availability" string="Available From"/>
                            <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    
                        <group>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="selling_price" string="Selling Price"/>
                            <field name="best_price" string="Best offer"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" string="Description"/>
                                <field name="bedrooms" string="Bedrooms"/>
                                <field name="living_area" string="Living Area"/>
                                <field name="facades" string="Facades"/>
                                <field name="garage" string="Garage"/>
                                <field name="garden" string="Garden"/>
                                <field name="garden_area" string="Garden Area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area" string="Total Area"/>
                                <field name="garden_orientation" string="Garden Orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="buyer_id" string="Buyer"/>
                                <field name="salesman_id" string="Salesman"/>
                            </group>
                        </page>
                        <page string="Offers">
                            
                            <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer accepted', 'sold', 'canceled'))]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <field name="facades" string="Facades"/>
                <field name="living_area" string="Living Area"
                    filter_domain="[('living_area', '>=', self)]"/>
                <filter name="Available" domain="[('state', '=', ('new','offer received'))]">
                </filter>

                <group expand="0" name="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="0">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <div>
                                Expected Price: <field name="expected_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer received'">
                                Best Offer: <field name="best_price"/>
                            </div>
                            <div t-if="record.selling_price.raw_value">
                                Selling Price: <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="property_tag_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
                <field name="state"/>
            </kanban>

        </field>
    </record>


</odoo>